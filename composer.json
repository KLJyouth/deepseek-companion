{
    "name": "deepseek/companion",
    "license": "proprietary",
    "version": "1.0.0",
    "description": "智能文档自动化增强系统",
    "authors": [
        {
            "name": "DeepSeek Team",
            "email": "dev@deepseek.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-redis": "*",
        "monolog/monolog": "^2.8",
        "symfony/process": "^6.4",
        "endroid/qrcode": "^4.8"
    },
    "suggest": {
        "ext-posix": "在Linux环境中用于进程管理和安全控制"
    },
    "autoload": {
        "psr-4": {
            "Services\\": "services/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Services\\Installer:createDeploymentUser"
        ],
        "post-update-cmd": [
            "Services\\Installer:createDeploymentUser"
        ],
        "validate": "./scripts/validate_composer.sh"
    },
    "minimum-stability": "stable",
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}