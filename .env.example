# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=stanfai
DB_USERNAME=root
DB_PASSWORD=

# 测试数据库配置
DB_TEST_HOST=localhost
DB_TEST_PORT=3306
DB_TEST_DATABASE=stanfai_test
DB_TEST_USERNAME=root
DB_TEST_PASSWORD=

# 备份配置
BACKUP_DIR=storage/backups
BACKUP_COMPRESS=true
BACKUP_KEEP_DAYS=7
# BACKUP_REMOTE={"type":"ftp","host":"ftp.example.com","user":"username","pass":"password"}

# 应用配置
APP_ENV=development
APP_DEBUG=true

# 加密配置
ENCRYPTION_KEY=base64:$(base64_encode(random_bytes(32)))
ENCRYPTION_IV=base64:$(base64_encode(random_bytes(16)))

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE_TIME=3600

# 会话配置
SESSION_TIMEOUT=3600
SESSION_REGENERATE_INTERVAL=300

# 区块链配置 (可选)
BLOCKCHAIN_API_URL=https://blockchain-api.example.com
BLOCKCHAIN_API_KEY=

# Redis配置 (可选)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=